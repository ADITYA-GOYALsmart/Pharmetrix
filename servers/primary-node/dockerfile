# server/Dockerfile
FROM node:20-alpine
WORKDIR /app

# Install dependencies first for better caching
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Build (optional for prod image; kept here for now)
RUN npm run build

# Expose API port
EXPOSE 4200

# Default command (will be overridden by compose in dev)
CMD ["npm", "start"]
